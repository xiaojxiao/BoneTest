<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="40dip"
	    android:orientation="horizontal" android:background="@drawable/top_bg" android:gravity="center_vertical" android:paddingLeft="5dip" android:paddingRight="5dip">
	        <ImageButton
	            android:id="@+id/btn_back4"
	            android:layout_width="51dip"
	            android:layout_height="22dip"
	            android:src="@drawable/btn_back" android:background="#00000000" android:scaleType="fitXY"/>
        
	        <LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:orientation="horizontal"  android:gravity="right|center_vertical">
			    
		        <ImageButton
		            android:id="@+id/btn_menu4"
		            android:layout_width="51dip"
		            android:layout_height="22dip"
		            android:src="@drawable/btn_menu" android:background="#00000000" android:scaleType="fitXY"/>
	        
	         </LinearLayout>
	</LinearLayout>
		
	<ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" android:layout_marginBottom="10dip"  android:scrollbars="vertical" >
        
	    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical">
        
		    <ImageView
		        android:id="@+id/imageView1"
		        android:layout_width="80dip"
		        android:layout_height="40dip"
		        android:src="@drawable/small_title_1" android:scaleType="fitXY" android:layout_margin="6dip"/>
		    
		    <TextView  
			    android:layout_width="fill_parent" 
			    android:layout_height="fill_parent" 
			    android:id="@+id/txt_result1"
			    android:text="1"
			    android:textSize="16dip"
				android:textColor="#000000"
				android:gravity="center"
			    />
		    
		    <ImageView
		        android:id="@+id/imageView1"
		        android:layout_width="80dip"
		        android:layout_height="40dip"
		        android:src="@drawable/small_title_2" android:scaleType="fitXY" android:layout_margin="6dip"/>
		    
		    <TextView  
			    android:layout_width="fill_parent" 
			    android:layout_height="fill_parent" 
			    android:id="@+id/txt_result2"
			    android:text=""
			    android:textSize="18px"
				android:textColor="#000000" android:paddingLeft="10dip" android:paddingRight="10dip"/>
	    
		    <ImageView
		        android:id="@+id/imageView1"
		        android:layout_width="80dip"
		        android:layout_height="40dip"
		        android:src="@drawable/small_title_3" android:scaleType="fitXY" android:layout_margin="6dip"/>
		    
		    <TextView  
			    android:layout_width="fill_parent" 
			    android:layout_height="fill_parent" 
			    android:id="@+id/txt_result3"
			    android:text="@string/result_peer_count_default"
			    android:textSize="18px"
				android:textColor="#000000"
				android:gravity="center"
				android:layout_marginBottom="30dip"/>
		    
    	 </LinearLayout>
    </ScrollView>
    
    <com.google.ads.AdView android:id="@+id/ad2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        ads:adUnitId="a14f242228dbddf"
                        ads:adSize="BANNER"
                        ads:loadAdOnCreate="true"/>

    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" android:gravity="center_horizontal" android:layout_marginBottom="20dip">
    
	    <Button
	        android:id="@+id/btn_save"
	        android:layout_width="90dip"
	        android:layout_height="45dip" android:background="@drawable/btn_bg_click" android:layout_marginRight="10dip" android:text="@string/btn_txt_save" android:textColor="#FFCC33" android:textSize="18dip"/>

	    <Button
	        android:id="@+id/btn_replay"
	        android:layout_width="90dip"
	        android:layout_height="45dip" android:background="@drawable/btn_bg_click" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:text="@string/btn_txt_replay" android:textColor="#FFCC33" android:textSize="18dip"/>
    
	    <Button
	        android:id="@+id/btn_share"
	        android:layout_width="90dip"
	        android:layout_height="45dip" android:background="@drawable/btn_bg_click" android:layout_marginLeft="10dip" android:text="@string/btn_txt_share" android:textColor="#FFCC33" android:textSize="18dip"/> 
    </LinearLayout>
    
</LinearLayout>