<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="40dip"
	    android:orientation="horizontal" android:background="@drawable/top_bg" android:gravity="center_vertical" android:paddingLeft="5dip" android:paddingRight="5dip">
	        <ImageButton
	            android:id="@+id/btn_back1"
	            android:layout_width="51dip"
	            android:layout_height="22dip"
	            android:src="@drawable/btn_back" android:background="#00000000" android:scaleType="fitXY"/>
        
	        <LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:orientation="horizontal"  android:gravity="right|center_vertical">
			    
		        <ImageButton
		            android:id="@+id/btn_menu1"
		            android:layout_width="51dip"
		            android:layout_height="22dip"
		            android:src="@drawable/btn_menu" android:background="#00000000" android:scaleType="fitXY"/>
	        
	         </LinearLayout>
	</LinearLayout>
	
    <TextView
		    android:id="@+id/txt_hint_sex"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="請選擇性別：" android:textColor="#000000" android:layout_marginLeft="15dip" android:layout_marginTop="20dip" android:textSize="18dip" android:textStyle="bold"/>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal" android:gravity="center_vertical|center_horizontal" android:layout_marginBottom="40dip">

	    <ImageButton
	        android:id="@+id/btn_male"
	        android:layout_width="150dip"
	        android:layout_height="300dip"
	        android:src="@drawable/btn_male_bg" android:background="#00000000" android:scaleType="fitXY"/>
	    
	    <ImageButton
	        android:id="@+id/btn_female"
	        android:layout_width="150dip"
	        android:layout_height="300dip"
	        android:src="@drawable/btn_female_bg" android:background="#00000000" android:scaleType="fitXY"/>
    
    </LinearLayout>
    
</LinearLayout>